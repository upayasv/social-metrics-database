@model IEnumerable<UpayaWebApp.Meals>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AvgMealsPerDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnyNonVegetarian)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvgNonVegPerMonth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MealTypes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodSourceTypes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AvgMealsPerDay)
        </td>
        <td>
            @FormatHelper.FormatBool(item.AnyNonVegetarian)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AvgNonVegPerMonth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MealTypes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FoodSourceTypes)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
