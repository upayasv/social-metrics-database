@model IEnumerable<UpayaWebApp.PartnerStaffMember>

@{
    ViewBag.Title = "Staff Members";
}

<h2>Staff Members</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Birthday
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InternalPartnerEmployeeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GenderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StaffTypeId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(@Html.DisplayFor(modelItem => item.Name).ToString(), "Details", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @FormatHelper.FormatDate(item.BirthDay, item.BirthMonth, item.BirthYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InternalPartnerEmployeeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StaffType.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
