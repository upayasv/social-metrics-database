@model IEnumerable<UpayaWebApp.Beneficiary>

@{
    ViewBag.Title = "Beneficiaries";
}

<h2>Beneficiaries</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Block)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            Birthday
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GenderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TownId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disability)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EducationLevelId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(@Html.DisplayFor(modelItem => item.Name).ToString(), "Details", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Block)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @FormatHelper.FormatDate(item.BirthDay, item.BirthMonth, item.BirthYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Town.Name)
        </td>
        <td>
            @FormatHelper.FormatBool(item.Disability)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EducationLevel.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
