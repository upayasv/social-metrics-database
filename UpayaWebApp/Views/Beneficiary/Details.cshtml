            {
                @Html.Raw(" " + ViewBag.DisabilitiesValue)
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EducationLevelId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EducationLevel.Title)
        </dd>

        <dt>
