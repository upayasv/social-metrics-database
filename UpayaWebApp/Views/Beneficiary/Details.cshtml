        <dt>
            @Html.DisplayNameFor(model => model.SecondaryWorkDaysM)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SecondaryWorkDaysM)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PrimaryDailyWage)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PrimaryDailyWage)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SecondaryDailyWage)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SecondaryDailyWage)
        </dd>

        <dt>
            StartDate
        </dt>
        <dd>
            @FormatHelper.FormatDate(Model.StartDateDay, Model.StartDateMonth, Model.StartDateYear.Value)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrigEntryDate)
        </dt>
        <dd>
            @FormatHelper.FormatOrigDate(Model.OrigEntryDate)
        </dd>
    </dl>
</div>

