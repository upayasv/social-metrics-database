@model UpayaWebApp.HouseholdAsset

@{
    ViewBag.Title = "Edit Asset";
}

<h2>Edit assert of beneficiary @ViewBag.Beneficiary.Name</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.AssetTypeId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Raw(Model.AssetType.Title)
                @Html.ValidationMessageFor(model => model.AssetTypeId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Count, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Count)
                @Html.ValidationMessageFor(model => model.Count)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OrigEntryDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("OrigEntryDate", FormatHelper.FormatOrigDate(Model.OrigEntryDate))
                @Html.ValidationMessageFor(model => model.OrigEntryDate)
            </div>
        </div>

        <input type="hidden" name="BeneficiaryId" id="BeneficiaryId" value="@Model.BeneficiaryId" />
        <input type="hidden" name="AssetTypeId" id="AssetTypeId" value="@Model.AssetTypeId" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { bid = ViewBag.Beneficiary.Id }) |
    @Html.ActionLink("Back to beneficiary", "Details", "Beneficiary", new { id = ViewBag.Beneficiary.Id }, null)
</div>
