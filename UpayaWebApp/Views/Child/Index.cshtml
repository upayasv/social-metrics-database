@model IEnumerable<UpayaWebApp.Child>

@{
    ViewBag.Title = "Index";
}

<h2>Children related to beneficiary @Html.ActionLink((string)ViewBag.Beneficiary.Name, "Details", "Beneficiary", new { id = ViewBag.Beneficiary.Id }, null)</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { bid = ViewBag.Beneficiary.Id }, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender.Title)
        </th>
        <!--
        <th>
            Html.DisplayNameFor(model => model.ChildRelationship.Title)
        </th>
        -->
        <th>
            Birthday
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrolledInSchool)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disability)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(@Html.DisplayFor(modelItem => item.Name).ToString(), "Details", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender.Title)
        </td>
        <!--
        <td>
            Html.DisplayFor(modelItem => item.ChildRelationship.Title)
        </td>
        -->
        <td>
            @FormatHelper.FormatDate(item.BirthDay, item.BirthMonth, item.BirthYear)
        </td>
        <td>
            @FormatHelper.FormatBool(item.EnrolledInSchool)
        </td>
        <td>
            @FormatHelper.FormatBool(item.Disability)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
