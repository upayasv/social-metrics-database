@model IEnumerable<UpayaWebApp.HAssetValue>

@{
    ViewBag.Title = "Household Asset Values";
}

<h2>Household Asset Values</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AssetType.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AssetType.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
